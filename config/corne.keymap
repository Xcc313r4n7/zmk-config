// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans       &sk LGUI      &sk LALT      &sk LCTRL     &sk LSFT        &caps              &none    &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_RIGHT &kp PSCRN     &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans         &none       &kp LC(X)     &kp LC(C)     &kp LC(V)       &none              &none     &msc SCRL_DOWN &msc SCRL_UP     &none         &none        &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
//                                           |             |             |             ||  ||             |             |             |
                                                 &trans       &sys_reset   &bootloader         &mkp MCLK     &mkp LCLK     &mkp RCLK
//                                           |_____________|_____________|_____________||  ||_____________|_____________|_____________|
                               >;
                        };
            number_layer {
                  display-name = "N#M83R5";
                  bindings = <

//  ___________________________________________________________________________________       ___________________________________________________________________________________
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans      &bt BT_CLR   &out OUT_TOG    &kp C_PP     &kp C_MUTE       &none            &kp FSLH        &kp N7        &kp N8        &kp N9      &kp ASTRK       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans     &kp C_BRI_UP   &bt BT_NXT    &kp C_NEXT   &kp C_VOL_UP      &none            &kp MINUS       &kp N4        &kp N5        &kp N6      &kp PLUS        &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans     &kp C_BRI_DN   &bt BT_PRV    &kp C_PREV   &kp C_VOL_DN      &none            &kp CARET       &kp N1        &kp N2        &kp N3      &kp PRCNT       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
//                                           |             |             |             ||  ||             |             |             |
                                                  &none         &none        &trans             &kp DOT        &kp N0      &kp EQUAL
//                                           |_____________|_____________|_____________||  ||_____________|_____________|_____________|
                             >;
                         };
            symbol_layer {
                    display-name = "SYM8015";
                    bindings = <

//  ___________________________________________________________________________________       ___________________________________________________________________________________
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans       &kp LBRC      &kp RBRC      &kp LBKT      &kp RBKT      &kp BSLH             &none        &kp F7        &kp F8        &kp F9        &kp F10       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans       &kp AMPS      &kp DLLR      &kp HASH       &kp AT       &kp UNDER           &kp ESC       &kp F4        &kp F5        &kp F6        &kp F11       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans        &kp LT        &kp GT       &kp LPAR      &kp RPAR      &kp PIPE             &none        &kp F1        &kp F2        &kp F3        &kp F12       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
//                                           |             |             |             ||  ||             |             |             |
                                                  &none         &none         &none             &trans         &none         &none
//                                           |_____________|_____________|_____________||  ||_____________|_____________|_____________|
                               >;
                        };
            navigation_layer {
                    display-name = "N4V19473";
                    bindings = <
//  ___________________________________________________________________________________       ___________________________________________________________________________________
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans         &none       &kp HOME       &kp UP        &kp END        &none              &none       &kp RC(Y)     &kp RC(Z)     &kp RC(A)       &none        &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans        &kp INS      &kp LEFT      &kp DOWN      &kp RIGHT       &none              &caps       &sk RSFT      &sk RCTRL     &sk RALT      &sk RGUI       &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
// |             |             |             |             |             |             ||  ||             |             |             |             |             |             |
       &trans         &none         &none       &kp PG_UP     &kp PG_DN       &none              &none       &kp RC(V)     &kp RC(C)     &kp RC(X)       &none        &trans
// |_____________|_____________|_____________|_____________|_____________|_____________||  ||_____________|_____________|_____________|_____________|_____________|_____________|
